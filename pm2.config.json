{
  "apps": [
    {
      "name": "server",
      "script": "dist/src/main.js",
      "watch": false,
      "env": {
        "NODE_ENV": "production"
      },
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "out_file": "./logs/server-out.log",
      "error_file": "./logs/server-error.log",
      "merge_logs": true,
      "max_memory_restart": "1G",
      "instance_var": "INSTANCE_ID"
    }
  ]
}
